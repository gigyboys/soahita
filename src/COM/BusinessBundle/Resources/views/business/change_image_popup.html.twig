<div style="background:#fff;">	
	<div style="background:#fff; padding: 5px;border-bottom:1px solid #ddd; min-height: 34px">
		<div style="float:left; font-weight:bold">
			Modification de l'image de l'article : {{ product.name }}
		</div>
		<div style="float:right;cursor: pointer; " class="button_closable">
			<img src="{{ asset('asset/image/close_icon.png') }}" style="width:16px; height:auto" alt="x" />
		</div>
	</div>
	
	<div style="background:#fff; padding: 5px; ">
		<div style="padding:5px">
			{% set classDefault = '' %}
			{% if current is null %}
				{% set classDefault = 'active' %}
			{% endif %}
			<div id="images_wrapper"><!--
				--><div class="image_item {{ classDefault }}" id="default_image">
						<img class="image_popup default" data-type="product" data-target="{{ path('com_business_product_select_image', {'product_id': product.id, 'productimage_id': 0}) }}" src="{{ 'default/image/product/default.png' | imagine_filter('120x120') }}" alt="" />
					</div><!--
				{% for image in images %}
					{% set classActive = '' %}
					{% if image.current %}
						{% set classActive = 'active' %}
					{% endif %}
					-->{{ include("COMBusinessBundle:business:include/productimage_item.html.twig") }}<!--
				{% endfor %}
			--></div>
		</div>
	</div>
	<div style="border-top:1px solid #ddd;padding:10px; text-align:center">
		<label for="imagefile" style="cursor:pointer">télécharger une image ...</label>
		<input style="display: none" data-type="product" id="imagefile" name="file" class="ajax_image" type="file" accept="image/*" data-target="{{ path('com_business_product_upload_image', {'product_id': product.id}) }}" />
	</div>
	<div style="border-top:1px solid #ddd;padding:10px; text-align:center">
		<img src="{{ asset('asset/image/info_icon.png') }}" style="width:20px; height:20px; display: inline-block; vertical-align: middle" alt="i" /> Cliquer sur une image ou télécharger un nouveau pour changer l'image du produit.
	</div>
</div>