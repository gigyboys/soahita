{% extends "COMBusinessBundle::business.html.twig" %}

{% block title %}Edition de l'article : {{ product.name }}{% endblock %}

{% block body %}
{{ include("COMPlatformBundle:platform:tooltip.html.twig") }}
    <section class="content-header">
      <h1>
        Edition de l'article : {{ product.name }}
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Edition de l'article</a></li>
			  <li class="pull-right"><a href="{{ path('com_business_add_product') }}" class="btn btn-flat btn-danger"> Ajout</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<div class="">
								<form class="form-horizontal" action="{{ path('com_business_edit_product', {'product_id': product.id}) }}" method="post">
									<div class="">
										<div class="form-group">
											<label for="select" class="col-sm-3 control-label">Categorie <span>*</span></label>
											<div class="col-sm-9">
												<select class="form-control" id="select" name="product_init[categoryId]" required>
													{% for category in categories %}
														{% set selected = '' %}
														{% if category.id == productInit.categoryId %}
															{% set selected = 'selected' %}
														{% endif %}
														<option value="{{ category.id }}" {{ selected }}>{{ category.name }}</option>
													{% endfor %}
												</select>
											</div>
										</div>

										<div class="form-group">
											<label for="select" class="col-sm-3 control-label">Marque <span>*</span></label>
											<div class="col-sm-9">
												<select class="form-control" id="selectMarque" name="product_init[brandId]" required>
												<option value="0">Aucune marque</option>
													{% for brand in brands %}
														{% set selected = '' %}
														{% if brand.id == productInit.brandId %}
															{% set selected = 'selected' %}
														{% endif %}
														<option value="{{ brand.id }}" {{ selected }}>{{ brand.name }}</option>
													{% endfor %}
												</select>
											</div>
										</div>

										<div class="form-group">
											<label for="designation" class="col-sm-3 control-label">Designation <span>*</span></label>
											<div class="col-sm-9">
												<input type="text" class="form-control" id="designation" name="product_init[name]" value="{{ productInit.name }}" placeholder="designation" required>
											</div>
										</div>

										<div class="form-group">
											<label for="reference" class="col-sm-3 control-label">Référence</label>
											<div class="col-sm-9">
												<input type="text" class="form-control" id="reference" name="product_init[reference]" value="{{ productInit.reference }}" placeholder="reference">
											</div>
										</div>

										<div class="form-group">
											<label for="quantityalert" class="col-sm-3 control-label">Quantité alerte<span>*</span></label>

											<div class="col-sm-9">
											<input type="number" class="form-control" id="quantityalert" placeholder="Quantité alerte" name="product_init[quantityalert]" value="{{ productInit.quantityalert }}"  min="0" step="1" required>
											</div>
										</div>
										
										<div class="form-group">
											<label for="description" class="col-sm-3 control-label">Description</label>
											<div class="col-sm-9">
												<textarea name="product_init[description]" id="description" placeholder="Ajouter la description de l'article" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{ productInit.description }}</textarea>
											</div>
										</div>

									</div>
									<div class="box-footer text-right">
										<a href="{{ path('com_business_view_product', {'product_id': product.id}) }}" class="btn btn-flat btn-danger" >Annuler</a>
										<button id="product_init_save" type="submit" name="product_init[save]" class="btn btn-info" >Modifier</button>
									</div>
								</form>
							</div>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}