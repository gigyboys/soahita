{% extends "COMBusinessBundle::business.html.twig" %}

{% block title %}Edition sur la dépense {{ expenditure.name }}{% endblock %}

{% block body %}
{{ include("COMPlatformBundle:platform:tooltip.html.twig") }}
    <section class="content-header">
      <h1>
        Edition sur la dépense {{ expenditure.name }}
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Edition</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<div class="">
								<form class="form-horizontal" action="{{ path('com_business_edit_expenditure', {'expenditure_id': expenditure.id}) }}" method="post">
									<div class="box-body">

										<div class="form-group">
											<label for="name" class="col-sm-3 control-label">Désignation <span>*</span></label>

											<div class="col-sm-9">
											<input type="text" class="form-control" id="name" placeholder="Désignation" name="expenditure_init[name]" value="{{ expenditureInit.name }}" required>
											</div>
										</div>
										
										<div class="form-group">
											<label for="date" class="col-sm-3 control-label">Date <span>*</span></label>

											<div class="col-sm-9">
											<input type="text" class="form-control" id="date" placeholder="jj/mm/aaaa" name="expenditure_init[date]" value="{{ expenditureInit.date | date('d/m/Y') }}" required>
											</div>
										</div>

										<div class="form-group">
											<label for="amount" class="col-sm-3 control-label">Montant <span>*</span></label>

											<div class="col-sm-9">
											<input type="number" class="form-control" id="amount" placeholder="Montant" name="expenditure_init[amount]" value="{{ expenditureInit.amount }}" min="0" step="1" required>
											</div>
										</div>
											
										<div class="form-group">
											<label for="description" class="col-sm-3 control-label">Description </label>
											<div class="col-sm-9">
												<textarea id="description" class="" name="expenditure_init[description]" placeholder="Ajouter ici la description" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"> {{ expenditureInit.description }}</textarea>
											</div>
										</div>

									</div>
									<div class="box-footer text-right">
										<button id="product_init_save" type="submit" name="expenditure_init[save]" class="btn btn-info" >Enregistrer</button>
									</div>
								</form>
							</div>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}