{% extends "COMBusinessBundle::business.html.twig" %}

{% block title %}Modification ligne stock{% endblock %}

{% block body %}
    <section class="content-header">
      <h1>
        Modification ligne stock
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#edit_tab" data-toggle="tab">Modification</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="edit_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<div class="">
								<form class="form-horizontal" action="{{ path('com_business_edit_stock', {'stock_id': stock.id}) }}" method="post">
									<div class="box-body">

                                    <div class="form-group">
										<label for="select" class="col-sm-3 control-label">Article </label>
										<div class="col-sm-9">
											{{ stock.product.name }} ({{ getQteStock(stock.product) }})
										</div>
									</div>

                                    <div class="form-group">
										<label for="select" class="col-sm-3 control-label">Type </label>
										<div class="col-sm-9">
											{% if stock.type == 0 %}
												Entrée en stock
											{% else %}
												vente
											{% endif %}
										</div>
									</div>

									<div class="form-group">
										<label for="date" class="col-sm-3 control-label">Date entrée <span>*</span></label>

										<div class="col-sm-9">
										<input type="text" class="form-control" id="date" placeholder="jj/mm/aaaa" name="stock_init[date]" value="{{ stockInit.date | date('d/m/Y') }}" required>
										</div>
									</div>

									<div class="form-group">
										<label for="price" class="col-sm-3 control-label">Prix d'achat unitaire<span>*</span></label>

										<div class="col-sm-9">
										<input type="number" class="form-control" id="price" placeholder="Prix d'achat" name="stock_init[price]" value="{{ stockInit.price }}" min="0" step="1" required>
										</div>
									</div>

									<div class="form-group">
										<label for="quantity" class="col-sm-3 control-label">Quantité <span>*</span></label>

										<div class="col-sm-9">
										<input type="number" class="form-control" id="quantity" placeholder="Quantité" name="stock_init[quantity]" value="{{ stockInit.quantity }}" min="0" step="1" required>
										</div>
									</div>
										
									<div class="form-group">
										<label for="description" class="col-sm-3 control-label">Description </label>
										<div class="col-sm-9">
											<textarea id="description" class="" name="stock_init[description]" placeholder="Ajouter ici la description du ligne stock" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{ stockInit.description }}</textarea>
										</div>
									</div>

									</div>
									<div class="box-footer text-right">
										<button id="product_init_save" type="submit" name="stock_init[save]" class="btn btn-info" >Enregistrer</button>
									</div>
								</form>
							</div>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}