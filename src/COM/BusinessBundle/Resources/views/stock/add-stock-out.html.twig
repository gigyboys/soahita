{% extends "COMBusinessBundle::business.html.twig" %}

{% block title %}Ajout d'une vente{% endblock %}

{% block body %}
    <section class="content-header">
      <h1>
        Stock (sortie)
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Ajout d'une vente</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<div class="">
								<!-- form start -->
								<form class="form-horizontal" action="{{ path('com_business_add_stock', {'type': 'out'}) }}" method="post">
									<div class="box-body">

                                    <div class="form-group">
										<label for="select" class="col-sm-3 control-label">Article <span>*</span></label>
										<div class="col-sm-9">
											<select class="form-control" id="select" name="stock_init[productId]" required>
												{% for product in products %}
													<option value="{{ product.id }}">{{ product.name }} ({{ product.qteStock }}) </option>
												{% endfor %}
											</select>
										</div>
									</div>

									<div class="form-group">
										<label for="date" class="col-sm-3 control-label">Date de vente <span>*</span></label>

										<div class="col-sm-9">
										<input type="text" class="form-control" id="date" placeholder="jj/mm/aaaa" name="stock_init[date]" required>
										</div>
									</div>

									<div class="form-group">
										<label for="price" class="col-sm-3 control-label">Prix de vente unitaire <span>*</span></label>

										<div class="col-sm-9">
										<input type="number" class="form-control" id="price" placeholder="Prix de vente" name="stock_init[price]" min="0" step="1" required>
										</div>
									</div>

									<div class="form-group">
										<label for="quantity" class="col-sm-3 control-label">Quantité <span>*</span></label>

										<div class="col-sm-9">
										<input type="number" class="form-control" id="quantity" placeholder="Quantité" name="stock_init[quantity]" min="0" step="1" required>
										</div>
									</div>
										
									<div class="form-group">
										<label for="description" class="col-sm-3 control-label">Description </label>
										<div class="col-sm-9">
											<textarea id="description" class="" name="stock_init[description]" placeholder="Ajouter ici la description du vente" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
										</div>
									</div>

									</div>
									<!-- /.box-body -->
									<div class="box-footer text-right">
										<button id="product_init_save" type="submit" name="stock_init[save]" class="btn btn-info" >Enregistrer</button>
									</div>
								</form>
							</div>
                        </div>
                    </div>
                </div>
				
            </div>
            <!-- /.tab-content -->
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}