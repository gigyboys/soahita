{% extends "COMTrainingBundle::training.html.twig" %}

{% block title %}Formation - Cours{% endblock %}

{% block body %}
{{ include("COMPlatformBundle:platform:tooltip.html.twig") }}

    <section class="content-header">
      <h1>
        Liste des cours
      </h1>
	
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#list_tab" data-toggle="tab">Liste</a></li>
			  <li class="pull-right"><a href="{{ path('com_training_add_course') }}" class="btn btn-flat btn-danger"> Ajouter</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="list_tab"> 	
                    <div class="box-body">
                      <table class="datatable table table-bordered table-striped">
                        <thead>
                          <tr>
                            <th style="width:60px">Id</th>
                            <th>Désignation</th>
                            <th>Référene</th>
                            <th>Tarif Estimé (Ar)</th>
                            <th>Description</th>
                            <th style="max-width: 110px">Actions</th>
                          </tr>
                        </thead>
                        <tbody>
						
						{% for course in courses %}
							<tr>
								<td>{{ course.id }}</td>
								<td>{{ course.name }}</td>
								<td>{{ course.reference }}</td>
								<td>
									{% set price=formatAmount(course.price) %}
									{{ price }}
								</td>
								<td title="{{ course.description }}">{{ substrSpace(course.description, 30) }}</td>
								<td class="actions">
									<a href="{{ path('com_training_view_course', {'course_id': course.id}) }}" class="btn btn-flat btn-success btn-xs" title="afficher"><i class="fa fa-eye"></i></a>
									<a href="{{ path('com_training_edit_course', {'course_id': course.id}) }}" class="btn btn-flat btn-primary btn-xs" title="modifier"><i class="fa fa-pencil-square"></i></a>
									<span data-target="{{ path('com_training_delete_course', {'course_id': course.id}) }}" data-label="Voulez vous effectuer la suppression du cours &quot;{{ course.name}}&quot;?" data-id="{{ course.id}}" class="btn_delete_popup btn btn-flat btn-danger btn-xs" title="suppression du cours {{ course.name}}"><i class="fa fa-times"></i></span>
								</td>
							</tr>
						{% endfor %}
                        
                        </tbody>
                        <tfoot>
                          <tr>
                            <th style="width:60px">Id</th>
                            <th>Désignation</th>
                            <th>Référene</th>
                            <th>Tarif Estimé (Ar)</th>
                            <th>Description</th>
                            <th style="max-width: 110px">Actions</th>
                          </tr>
                        </tfoot>
                      </table>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}