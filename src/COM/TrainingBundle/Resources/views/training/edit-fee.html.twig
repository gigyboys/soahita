{% extends "COMTrainingBundle::training.html.twig" %}

{% block title %}Formation - Edition du reglement pour l'étudiant "{{ fee.studentgroup.student.person.name }}" {% endblock %}

{% block body %}
{{ include("COMPlatformBundle:platform:tooltip.html.twig") }}
    <section class="content-header">
      <h1>
         Edition du reglement pour l'étudiant "{{ fee.studentgroup.student.person.name }}"
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Edition</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<form class="form-horizontal" action="{{ path('com_training_edit_fee', {'fee_id': fee.id}) }}" method="post">

								<div class="form-group">
									<label for="paymentdate" class="col-sm-3 control-label">Date de reglement<span>*</span></label>

									<div class="col-sm-9">
									<input type="text" class="form-control" placeholder="jj/mm/aaaa" id="paymentdate" name="fee_init[paymentdate]" value="{{ feeInit.paymentdate | date('d/m/Y') }}" required>
									</div>
								</div>

								<div class="form-group">
									<label for="amount" class="col-sm-3 control-label">Montant à regler <span>*</span></label>

									<div class="col-sm-9">
									<input type="number" class="form-control" id="amount" placeholder="Tarif estimé" value="{{ feeInit.amount }}" name="fee_init[amount]" min="0" step="1" required>
									</div>
								</div>
										
								<div class="form-group">
									<label for="description" class="col-sm-3 control-label">Description</label>
									<div class="col-sm-9">
										<textarea name="fee_init[description]" id="description" placeholder="Description" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{ feeInit.description }}</textarea>
									</div>
								</div>
								
								<div class="box-footer text-right">
									<a href="{{ path('com_training_view_studentgroup', {'studentgroup_id': fee.studentgroup.id}) }}" class="btn btn-flat btn-danger" >Annuler</a>
									<button type="submit" name="fee_init[save]" class="btn btn-info" >Enregistrer</button>
								</div>
							</form>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}