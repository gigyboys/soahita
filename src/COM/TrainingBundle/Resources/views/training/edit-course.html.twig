{% extends "COMTrainingBundle::training.html.twig" %}

{% block title %}Formation - Edition du cours {{ course.name }}{% endblock %}

{% block body %}
{{ include("COMPlatformBundle:platform:tooltip.html.twig") }}
    <section class="content-header">
      <h1>
        Edition du cours {{ course.name }}
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Edition</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<form class="form-horizontal" action="{{ path('com_training_edit_course', {'course_id': course.id}) }}" method="post">
								<div class="form-group">
									<label for="name" class="col-sm-3 control-label">Désignation <span>*</span></label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="name" name="course_init[name]" value="{{ courseInit.name }}" placeholder="Désignation" required>
									</div>
								</div>

								<div class="form-group">
									<label for="reference" class="col-sm-3 control-label">Référence <span>*</span></label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="reference" name="course_init[reference]" value="{{ courseInit.reference }}" placeholder="référence" required>
									</div>
								</div>

								<div class="form-group">
									<label for="price" class="col-sm-3 control-label">Tarif estimé <span>*</span></label>

									<div class="col-sm-9">
									<input type="number" class="form-control" id="price" placeholder="Tarif estimé" value="{{ courseInit.price }}" name="course_init[price]" min="0" step="1" required>
									</div>
								</div>
										
								<div class="form-group">
									<label for="description" class="col-sm-3 control-label">Description</label>
									<div class="col-sm-9">
										<textarea name="course_init[description]" id="description" placeholder="Description" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"> {{ courseInit.description }}</textarea>
									</div>
								</div>
								
								<div class="box-footer text-right">
									<button type="submit" name="course_init[save]" class="btn btn-info" >Enregistrer</button>
								</div>
							</form>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}