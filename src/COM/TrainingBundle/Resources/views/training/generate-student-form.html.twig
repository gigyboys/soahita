<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Card Sample</title>
</head>

<body>	
	<table cellpadding="0" cellspacing="0" border="0" width="600">
		<tr>
			<td height="50"></td>
		</tr>
	</table>

    <table cellpadding="0" cellspacing="0" border="5" bordercolor="#1f4a77" bgcolor="white" width="600" align="center" style="{#background-image:url('http://localhost/SoahitaSymfony/web/asset/image/fond.jpg'); #}font-size: 16px">    	
        <tr>
            <td>
            	<table cellpadding="0" cellspacing="0" border="0" width="600">
	            	<tr>
	            		<td width="100%" height="40" bgcolor="#1f4a77"><div style="width:100%;height:40px; background:#1f4a77"></div></td>
	            	</tr>
	            	<tr>
	            		<td width="100%" height="20" ></td>
	            	</tr>
	            </table>
	            <table cellpadding="0" cellspacing="0" border="0" width="600" style="font-family: Arial;">
	            	<tr>
	            		<td width="20"></td>
	            		<td width="410">
	            			<table cellpadding="0" cellspacing="0" border="0" width="100%" valign="top">
	            				<tr>
	            					<td style=" font-size: 25px"><b>Carte d'étudiant</b></td>
	            				</tr>
	            				<tr>
	            					<td height="20"></td>	            	
	            				</tr>
	            			</table>

	            			<table cellpadding="0" cellspacing="0" border="0" width="100%">
	            				<tr height="30">
	            					<td><b>{{ student.person.name }} {{ student.person.firstname }}</b></td>
	            				</tr>
	            				<tr height="30">
	            					<td>N&deg; matricule : <b>{{ student.matricule }}</b></td>
	            				</tr>
	            				<tr height="30">
	            					<td>Née le : <b>{{ student.person.birthdate  | date('d/m/Y')  }}</b></td>
	            				</tr>
	            				<tr height="30">
	            					<td>A : <b>{{ student.person.birthlocation }}</b></td>
	            				</tr>
	            				<tr height="30">
	            					<td>Sexe: <b>
										{% if student.person.sex == 0 %}
											Homme
										{% else %}
											Femme
										{% endif %}</b>
									</td>	            	
	            				</tr>
	            			</table>
	            		</td>	            		
	            		<td width="150" valign="top">
	            			<table cellpadding="0" cellspacing="0" border="0" width="100%">
	            				<tr>
	            					<td>
									{# twig extension #}
									{% set personimage=getPersonimage(student.person) %}	
	            						<img id="person_image" src="{{ personimage  | imagine_filter('150x150') }}" style="width:150px; height:150px;" />
	            					</td>
	            				</tr>
	            			</table>
	            		</td>
	            		<td width="20"></td>
	            	</tr>
	            	<tr>
	            		<td width="20"></td>
	            		<td width="410" valign="top">
	            			<table cellpadding="0" cellspacing="0" border="0" width="100%">
	            				<tr height="30">
	            					<td>Téléphone : <b>{{ student.person.phone }}</b></td>	            	
	            				</tr>
	            				<tr height="30">
	            					<td>Adresse : <b>{{ student.person.address }}</b></td>	            	
	            				</tr>
	            			</table>
	            		</td>
	            		<td width="150" valign="top">
	            			<table cellpadding="0" cellspacing="0" border="0" width="100%" style="font-size: 12px">
	            				<tr>
	            					<td align="center">Signature</td>
	            				</tr>
	            			</table>
	            		</td>
	            		<td width="20"></td>
	            	</tr>
	            </table>
	            <table cellpadding="0" cellspacing="0" border="0" width="600">
	            	<tr>
	            		<td width="100%" height="20" ></td>
	            	</tr>
	            </table>
            </td>
        </tr>
    </table> 
	
</body>
</html>