{% extends "COMTrainingBundle::training.html.twig" %}

{% block title %}Edition de la situation de {{ studentgroup.student.person.name }} dans le groupe {{ studentgroup.group.name }}{% endblock %}

{% block body %}
{{ include("COMPlatformBundle:platform:tooltip.html.twig") }}
    <section class="content-header">
      <h1>
         Edition de la situation de {{ studentgroup.student.person.name }} dans le groupe {{ studentgroup.group.name }}
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Edition</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<form class="form-horizontal" action="{{ path('com_training_edit_studentgroup', {'studentgroup_id': studentgroup.id}) }}" method="post">
								<div class="form-group">
									<label class="col-sm-3 control-label">Nom et Pr√©nom</label>
									<div class="col-sm-9">
										{{ studentgroup.student.person.name }} {{ studentgroup.student.person.firstname }} 
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">N&deg; matricule</label>
									<div class="col-sm-9">
										{{ studentgroup.student.matricule }}
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Cours</label>
									<div class="col-sm-9">
										{{ studentgroup.group.course.name }}
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Groupe</label>
									<div class="col-sm-9">
										{{ studentgroup.group.name }}
									</div>
								</div>

								<div class="form-group">
									<label for="price" class="col-sm-3 control-label">Tarif <span>*</span></label>

									<div class="col-sm-9">
									<input type="number" class="form-control" id="price" placeholder="Tarif" value="{{ studentgroupInit.price }}" name="studentgroup_init[price]" min="0" step="1" required>
									</div>
								</div>
								
								<div class="box-footer text-right">
									<a href="{{ path('com_training_view_studentgroup', {'studentgroup_id': studentgroup.id}) }}" class="btn btn-flat btn-danger" >Annuler</a>
									<button type="submit" name="studentgroup_init[save]" class="btn btn-info" >Enregistrer</button>
								</div>
							</form>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}