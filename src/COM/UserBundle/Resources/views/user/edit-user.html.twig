{% extends "COMTrainingBundle::training.html.twig" %}

{% block title %}Utilisateur : Edition d'information{% endblock %}

{% block body %}
{{ include("COMPlatformBundle:platform:tooltip.html.twig") }}
    <section class="content-header">
      <h1>
        Utilisateur : Edition d'information
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Détails</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<form class="form-horizontal" action="{{ path('com_user_edit', {'username': user.username}) }}" method="post">
								<div class="form-group">
									<label for="name" class="col-sm-3 control-label">Nom <span>*</span></label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="name" name="user_init[name]" value="{{ userInit.name }}" placeholder="nom" required>
									</div>
								</div>

								<div class="form-group">
									<label for="firstname" class="col-sm-3 control-label">Prénom</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="firstname" name="user_init[firstname]" value="{{ userInit.firstname }}" placeholder="prénom">
									</div>
								</div>
								
								<div class="form-group">
									<label for="sex" class="col-sm-3 control-label">Sexe <span>*</span></label>
									<div class="col-sm-9">
										<select class="form-control" id="sex" name="user_init[sex]" required>
											{% if userInit.sex == '1' %}
												<option value="0">homme</option>
												<option value="1" selected>femme</option>
											{% else %}
												<option value="0" selected>homme</option>
												<option value="1">femme</option>
											{% endif %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label for="birthdate" class="col-sm-3 control-label">Date de naissance</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" placeholder="jj/mm/aaaa" id="birthdate" name="user_init[birthdate]" value="{% if userInit.birthdate is not null %}{{ userInit.birthdate | date('d/m/Y') }}{% endif %}">
									</div>
								</div>

								<div class="form-group">
									<label for="birthlocation" class="col-sm-3 control-label">Lieu de naissance</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" id="birthlocation" placeholder="Lieu de naissance" name="user_init[birthlocation]" value="{{ userInit.birthlocation }}">
									</div>
								</div>

								<div class="form-group">
									<label for="cin" class="col-sm-3 control-label">n&deg; CIN</label>

									<div class="col-sm-9">
									<input type="number" class="form-control" id="cin" placeholder="cin" name="user_init[cin]" value="{{ userInit.cin }}" >
									</div>
								</div>

								<div class="form-group">
									<label for="cindate" class="col-sm-3 control-label">Date CIN</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" placeholder="jj/mm/aaaa" id="cindate" name="user_init[cindate]" value="{% if userInit.cindate is not null %}{{ userInit.cindate | date('d/m/Y') }}{% endif %}" >
									</div>
								</div>

								<div class="form-group">
									<label for="cinlocation" class="col-sm-3 control-label">CIN lieu</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" id="cinlocation" placeholder="CIN lieu" name="user_init[cinlocation]" value="{{ userInit.cinlocation }}" >
									</div>
								</div>

								<div class="form-group">
									<label for="address" class="col-sm-3 control-label">Adresse</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="address" name="user_init[address]" placeholder="adresse" value="{{ userInit.address }}">
									</div>
								</div>

								<div class="form-group">
									<label for="phone" class="col-sm-3 control-label">Téléphone</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="phone" name="user_init[phone]" placeholder="téléphone" value="{{ userInit.phone }}">
									</div>
								</div>

								<div class="form-group">
									<label for="email" class="col-sm-3 control-label">Email</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="email" name="user_init[email]" placeholder="email" value="{{ userInit.email }}">
									</div>
								</div>

								<div class="form-group">
									<label for="username" class="col-sm-3 control-label">Nom d'utilisateur<span>*</span></label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="username" name="user_init[username]" value="{{ userInit.username }}" placeholder="username" required>
									</div>
								</div>
								
								<div class="box-footer text-right">
									<a href="{{ path('com_user_profile', {'username': user.username}) }}" class="btn btn-flat btn-danger" >Annuler</a>
									<button type="submit" name="user_init[save]" class="btn btn-info" >Enregistrer</button>
								</div>
							</form>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}