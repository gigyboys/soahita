{% extends "COMStaffBundle::staff.html.twig" %}

{% block title %}Edition de l'employé {{ employee.person.name }} {{ employee.person.firstname }}{% endblock %}

{% block body %}
    <section class="content-header">
      <h1>
        Edition de l'employé {{ employee.person.name }} {{ employee.person.firstname }}
      </h1>
    </section>

    <section class="content container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#add_tab" data-toggle="tab">Edition de l'employé</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="add_tab"> 	
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
							<form class="form-horizontal" action="{{ path('com_staff_edit_employee', {'employee_id': employee.id}) }}" method="post">
								<div class="form-group">
									<label for="name" class="col-sm-3 control-label">Nom <span>*</span></label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="name" name="employee_init[name]" value="{{ employee.person.name }}" placeholder="nom" required>
									</div>
								</div>

								<div class="form-group">
									<label for="firstname" class="col-sm-3 control-label">Prénom</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="firstname" name="employee_init[firstname]" value="{{ employee.person.firstname }}" placeholder="prénom">
									</div>
								</div>
								
								<div class="form-group">
									<label for="sex" class="col-sm-3 control-label">Sexe <span>*</span></label>
									<div class="col-sm-9">
										<select class="form-control" id="sex" name="employee_init[sex]" required>
											{% if employee.person.sex == '1' %}
												<option value="0">homme</option>
												<option value="1" selected>femme</option>
											{% else %}
												<option value="0" selected>homme</option>
												<option value="1">femme</option>
											{% endif %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label for="birthdate" class="col-sm-3 control-label">Date de naissance</label>

									
									<div class="col-sm-9">
									<input type="text" class="form-control" placeholder="jj/mm/aaaa" id="birthdate" name="employee_init[birthdate]" value="{% if employee.person.birthdate is not null %}{{ employee.person.birthdate | date('d/m/Y') }}{% endif %}">
									</div>
								</div>

								<div class="form-group">
									<label for="birthlocation" class="col-sm-3 control-label">Lieu de naissance</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" id="birthlocation" placeholder="Lieu de naissance" name="employee_init[birthlocation]" value="{{ employee.person.birthlocation }}">
									</div>
								</div>

								<div class="form-group">
									<label for="cin" class="col-sm-3 control-label">n&deg; CIN</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" id="cin" placeholder="cin" name="employee_init[cin]" value="{{ employee.person.cin }}">
									</div>
								</div>
								<div class="form-group">
									<label for="cindate" class="col-sm-3 control-label">Date CIN</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" placeholder="jj/mm/aaaa" id="cindate" name="employee_init[cindate]" value="{% if employee.person.cindate is not null %}{{ employee.person.cindate | date('d/m/Y') }}{% endif %}">
									</div>
								</div>

								<div class="form-group">
									<label for="cinlocation" class="col-sm-3 control-label">CIN lieu</label>

									<div class="col-sm-9">
									<input type="text" class="form-control" id="cinlocation" placeholder="CIN lieu" name="employee_init[cinlocation]" value="{{ employee.person.cinlocation }}">
									
									</div>
								</div>

								<div class="form-group">
									<label for="address" class="col-sm-3 control-label">Adresse</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="address" name="employee_init[address]" placeholder="adresse" value="{{ employee.person.address }}">
									</div>
								</div>

								<div class="form-group">
									<label for="phone" class="col-sm-3 control-label">Téléphone</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="phone" name="employee_init[phone]" placeholder="téléphone" value="{{ employee.person.phone }}">
									</div>
								</div>

								<div class="form-group">
									<label for="email" class="col-sm-3 control-label">Email</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="email" name="employee_init[email]" placeholder="email" value="{{ employee.person.email }}">
									</div>
								</div>

								<div class="form-group">
									<label for="position" class="col-sm-3 control-label">Poste <span>*</span></label>
									<div class="col-sm-9">
										<input type="text" class="form-control" id="position" name="employee_init[position]" value="{{ employee.position }}" placeholder="Poste" required>
									</div>
								</div>

								<div class="form-group">
									<label for="positiondate" class="col-sm-3 control-label">Date de prise de poste<span>*</span></label>

									<div class="col-sm-9">
									<input type="text" class="form-control" placeholder="jj/mm/aaaa" id="positiondate" name="employee_init[positiondate]" value="{{ employee.positiondate  | date('d/m/Y') }}" required>
									</div>
								</div>

								<div class="form-group">
									<label for="salary" class="col-sm-3 control-label">Salaire <span>*</span></label>

									<div class="col-sm-9">
									<input type="number" class="form-control" id="salary" placeholder="salaire" name="employee_init[salary]" value="{{ employee.salary }}" required>
									</div>
								</div>
								
								<div class="box-footer text-right">
									<a href="{{ path('com_staff_view_employee', {'employee_id': employee.id}) }}" class="btn btn-flat btn-danger" >Annuler</a>
									<button id="product_init_save" type="submit" name="transaction_init[save]" class="btn btn-info" >Enregistrer</button>
								</div>
							</form>
                        </div>
                    </div>
                </div>
				
            </div>
          </div>
        </div>
      </div>
      
    </section>
{% endblock %}